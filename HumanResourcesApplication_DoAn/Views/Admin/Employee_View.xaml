<UserControl x:Class="HumanResourcesApplication_DoAn.Views.Admin.Employee_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HumanResourcesApplication_DoAn.Views.Admin"
             mc:Ignorable="d" 
             Background="{StaticResource Color2}"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             d:DesignHeight="750" d:DesignWidth="1100">
    <Grid>
        <Border CornerRadius="20" 
        BorderThickness="1" 
        BorderBrush="Transparent">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Border Height="300"
                Width="1100"
                BorderThickness="0,0,0,1"
                BorderBrush="LightGray"
                Grid.ColumnSpan="2" Margin="0,0,2,0">

                    <StackPanel 
                        Grid.Row="0"
                        Orientation="Horizontal"
                        Height="250"
                        Background="Transparent"
                        >
                        <Border BorderBrush="Black"
                        Margin="20,10,196,20"
                        Height="200"
                        Width="200"
                        BorderThickness="1"
                        Background="{StaticResource ButtonColor5}"
                        CornerRadius="200">
                            <Image Source="{Binding avatar}" />
                        </Border>
                        <StackPanel Height="300"
                            VerticalAlignment="Center"
                            Width="600"
                            Orientation="Vertical">
                            <TextBlock Margin="60,30,20,0"
                               Height="60"
                               FontSize="50"
                               Text="Hattie Watkins"
                               TextAlignment="Center">

                            </TextBlock>
                            <TextBlock Text="Web developer"
                               TextAlignment="Center"
                               Width="400"
                               FontSize="25"
                               Foreground="LightGray"/>
                            <StackPanel Margin="20"
                                Height="150" 
                                Orientation="Horizontal">
                                <Border Margin="25,0,25,0"
                                BorderThickness="1"
                                Height="80"
                                Width="80"
                                CornerRadius="50"
                                BorderBrush="Transparent"
                                Background="#006FD6" 
                                >
                                    <Button Width="80"
                                    Height="80"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource Color2}"
                                    BorderThickness="0"
                                    Content="f"
                                    FontSize="50"
                                    >
                                    </Button>

                                </Border>
                                <Border Margin="25,0,25,0"
                                BorderThickness="1"
                                Height="80"
                                Width="80"
                                CornerRadius="50"
                                BorderBrush="Transparent"
                                Background="#0095FF" 
                                >
                                    <Button Width="80"
                                    Height="80"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource Color2}"
                                    BorderThickness="0"
                                
                                    FontSize="50">
                                        <fa:ImageAwesome Foreground="White" Icon="Twitter" ></fa:ImageAwesome>
                                    </Button>

                                </Border>
                                <Border Margin="25,0,25,0"
                                BorderThickness="1"
                                Height="80"
                                Width="80"
           
                                CornerRadius="50"
                                BorderBrush="Transparent"
                                Background="#0a66c2" 
                                >
                                    <Button Width="80"
                                    Height="80"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource Color2}"
                                    BorderThickness="0"
                                    FontSize="50"
                                    HorizontalAlignment="Center"
                                    Content="in">

                                    </Button>

                                </Border>
                                <Border Margin="25,0,25,0"
                                BorderThickness="1"
                                Height="80"
                                Width="80"
                                CornerRadius="50"
                                BorderBrush="Transparent"
                                Background="#00E096"
                                >



                                    <Button Width="80"
                                    Height="80"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource Color2}"
                                    BorderThickness="0"
                                    FontSize="50"
                                    
                                    >
                                        <fa:ImageAwesome Foreground="White" Icon="Phone"></fa:ImageAwesome>
                                    </Button>
                                </Border>

                            </StackPanel>

                        </StackPanel>

                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Width="1150"
                        Height="1"
                        BorderThickness="0,0,0,1"
                        BorderBrush="LightGray"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"/>
                <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
                    <StackPanel
                        
                        Height="480"
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        Width="320"
                        HorizontalAlignment="Left">
                        <TextBlock Margin="10,20,0,0"
                           Height="50"
                           Width="150"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Text="Department"
                           FontSize="25"
                           TextAlignment="Left"
                           Foreground="LightGray"
                           Padding="10"/>
                        <TextBlock Margin="10,0,0,0"
                   Height="50"
                   Width="150"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Development"
                   FontSize="20"
                   TextAlignment="Left"
                   Foreground="Black"
                   Padding="10"/>
                        <TextBlock Margin="20,0,0,0"
                   Height="50"
                   Width="200"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Email"
                   FontSize="25"
                   TextAlignment="Left"
                   Foreground="LightGray"
                   Padding="0,0,10,10"/>
                        <TextBlock Margin="10,0,0,0"
                   Height="50"
                   Width="200"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="user01@gmail.com"
                   FontSize="20"
                   TextAlignment="Left"
                   Foreground="Black"
                   Padding="10"/>
                        <TextBlock Margin="20,0,0,0"
                   Height="50"
                   Width="200"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Education"
                   FontSize="25"
                   TextAlignment="Left"
                   Foreground="LightGray"
                   Padding="0,0,10,0"/>
                        <TextBlock Margin="10,0,0,0"
                   Height="100"
                   Width="310"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Text="Bachelor of Software Engineering Univeersity of Information and Technology"
                   FontSize="20"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Foreground="Black"
                   Padding="10"/>

                    </StackPanel>
                    <StackPanel
                 Height="480"
                 Orientation="Vertical"
                 VerticalAlignment="Top"
                 Width="320"
                 HorizontalAlignment="Left">
                        <TextBlock Margin="10,20,0,0"
                    Height="50"
                    Width="150"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="Gender"
                    FontSize="25"
                    TextAlignment="Left"
                    Foreground="LightGray"
                    Padding="10"/>
                        <TextBlock Margin="10,0,0,0"
                    Height="50"
                    Width="150"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="Male"
                    FontSize="20"
                    TextAlignment="Left"
                    Foreground="Black"
                    Padding="10"/>
                        <TextBlock Margin="20,0,0,0"
                    Height="50"
                    Width="200"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="Country"
                    FontSize="25"
                    TextAlignment="Left"
                    Foreground="LightGray"
                    Padding="0,0,10,10"/>
                        <TextBlock Margin="10,0,0,0"
                    Height="50"
                    Width="150"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="VietNam"
                    FontSize="20"
                    TextAlignment="Left"
                    Foreground="Black"
                    Padding="10"/>
                        <TextBlock Margin="20,0,0,0"
                    Height="50"
                    Width="200"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Text="Role"
                    FontSize="25"
                    TextAlignment="Left"
                    Foreground="LightGray"
                    Padding="0,0,10,0"/>
                        <TextBlock Margin="10,0,0,0"
                           Height="100"
                           Width="310"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Text=""
                           FontSize="20"
                           TextWrapping="Wrap"
                           TextAlignment="Left"
                           Foreground="Black"
                           Padding="10"/>

                    </StackPanel>
                    <StackPanel Height="480"
                                Width="320"
                                Orientation="Vertical">
                        <TextBlock Margin="10,20,0,0"
                                Height="50"
                                Width="150"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="Date of birth"
                                FontSize="25"
                                TextAlignment="Left"
                                Foreground="LightGray"
                                Padding="10"/>
                        <TextBlock Margin="10,0,0,0"
                                Height="50"
                                Width="150"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="30/04/1975"
                                FontSize="20"
                                TextAlignment="Left"
                                Foreground="Black"
                                Padding="10"/>
                        <TextBlock Margin="20,0,0,0"
                                Height="50"
                                Width="200"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="Payroll"
                                FontSize="25"
                                TextAlignment="Left"
                                Foreground="LightGray"
                                Padding="0,0,10,10"/>
                        <TextBlock Margin="10,0,0,0"
                                Height="50"
                                Width="150"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="VietNam"
                                FontSize="20"
                                TextAlignment="Left"
                                Foreground="Black"
                                Padding="10"/>  

                        <TextBlock Margin="20,0,0,0"
                                Height="50"
                                Width="200"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="Joindate"
                                FontSize="25"
                                TextAlignment="Left"
                                Foreground="LightGray"
                                Padding="0,0,10,0"/>
                        
                        <TextBlock Margin="10,0,0,0"
                               Height="100"
                               Width="310"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Text="25/11/2023"
                               FontSize="20"
                               TextWrapping="Wrap"
                               TextAlignment="Left"
                               Foreground="Black"
                               Padding="10"/>
                        
                    </StackPanel>
                </StackPanel>
                

                <StackPanel Grid.Row="2"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal">
                    <Border BorderThickness="1"
                    Background="#00E096"
                    Height="40"
                    Width="100"
                    CornerRadius="10"
               
                    
                    Margin="100,0,0,0" >
                        <Button Height="40"
                        BorderThickness="0"
                        Background="Transparent"
                        Content="Change"
                        FontSize="20"
                        Width="100">

                        </Button>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
